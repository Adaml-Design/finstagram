<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, inital-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Akaya+Telivigala&family=Open+Sans:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/lib.css">
    <link rel="stylesheet" href="/stylesheets/app.css">
    <title>Finstagram</title>
  </head>

  <body>
    <header class="container">      
        <h1><a href="/" style="color: #244751;">Finstagram</a></h1>
        <div class="login-info">
            <% if current_user %>
                <div class="dropdown">
                    <a class="dropbtn" href="/#">
                        <img class="avator" src="<%= current_user.avatar_url %>">
                        <p><%= current_user.username %></p>
                    </a>
                    <div class="dropdown-content">
                        <p href="/#"><%= current_user.email %></p>
                        <a href="/logout">Logout</a>
                    </div>
                </div>
            <% else %>
                <a href="/login">Login</a>
                <a class="button" href="/signup">Signup</a>
            <% end %>
        </div>
    </header>
    <main role="main">
        <%= yield %>
    </main>
  </body>
</html>